{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "rpkcs11",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/ssh",
            "args": [
                "-v",
                "-I",
                "${command:cmake.buildDirectory}/librpkcs11.so",
                "git@github.com"
            ],
            "cwd": "${command:cmake.buildDirectory}",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "text": "set env SSH_ASKPASS_REQUIRE=force"
                },
                {
                    "text": "set env SSH_ASKPASS=${workspaceFolder}/.vscode/ask-pass.sh"
                }
            ],
            "preLaunchTask": "build"
        },
        {
            "name": "server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "env": {
                "REMOTESC_PROVIDER": "/usr/lib/softhsm/libsofthsm2.so",
                "SOFTHSM2_CONF": ".vscode/softhsm2.conf"
            }
        }
    ]
}
